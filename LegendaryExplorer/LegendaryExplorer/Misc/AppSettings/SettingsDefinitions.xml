<?xml version="1.0" encoding="utf-8" ?>
<!-- Define application settings here. Run the 2 T4 templates here and in MainWindow afterwards to generate the code -->
<appsettings>
  <!-- All settings should have a prefix of where they primarily apply! -->
  <!-- To include a setting in the global settings window, give it a category. Categories will be grouped as TabItems -->
  <!-- Settings shown in the main window should also have a friendlyName that briefly describes what they do-->
  <!-- To specify a string as a folder select, set isDirectorySelect="true". To do the same for files and select extension filter, set fileSelectExtension=".pcc"-->

  <!-- Main Window Settings-->
  <setting name="MainWindow_DisableTransparencyAndAnimations" type="bool" defaultvalue="false" category="General"
           friendlyName="Main Window: Disable Transparency and Animations (requires restart)"/>
  <setting name="MainWindow_Favorites" type="string" defaultvalue=""/>
  <setting name="MainWindow_CompletedInitialSetup" type="bool" defaultvalue="false"/>

  <!-- Package Editor specific settings -->
  <setting name="PackageEditor_HideInterpreterHexBox" type="bool" defaultvalue="true" category="Package Editor"
           friendlyName="Hide Properties Hex Box"/>
  <setting name="PackageEditor_TouchComfyMode" type="bool" defaultvalue="false" category="Package Editor"
           friendlyName="Touch Comfy Mode"/>
  <setting name="PackageEditor_ShowImpExpPrefix" type="bool" defaultvalue="true" category="Package Editor"
           friendlyName="Show imp/exp entry prefixes"/>
  <setting name="PackageEditor_ShowExportTypeIcons" type="bool" defaultvalue="true" category="Package Editor"
           friendlyName="Show export type icons"/>
  <setting name="PackageEditor_ShowTreeEntrySubText" type="bool" defaultvalue="true" category="Package Editor"
           friendlyName="Show metadata in tree (if available)"/>
  <setting name="PackageEditor_ShowExperiments" type="bool" defaultvalue="false" category="Package Editor"
           friendlyName="Show experimental features"/>


  <!-- Sequence Editor specific settings -->
  <setting name="SequenceEditor_MaxVarStringLength" type="int" defaultvalue="40" category="Sequence Editor"
           friendlyName="Maximum variable string length"/>
  <setting name="SequenceEditor_ShowParsedInfo" type="bool" defaultvalue="true" category="Sequence Editor"
           friendlyName="Show parsed information in comments"/>
  <setting name="SequenceEditor_AutoSaveViewV2" type="bool" defaultvalue="true" category="Sequence Editor"
           friendlyName="Auto-save View"/>
  <setting name="SequenceEditor_ShowOutputNumbers" type="bool" defaultvalue="false" category="Sequence Editor"
           friendlyName="Show Output Numbers"/>
  <setting name="SequenceEditor_Favorites" type="string" defaultvalue="Sequence;SeqAct_Interp;InterpData;BioSeqAct_EndCurrentConvNode;BioSeqEvt_ConvNode;BioSeqVar_ObjectFindByTag;SeqVar_Object;SeqAct_ActivateRemoteEvent;SeqEvent_SequenceActivated;SeqAct_Delay;SeqAct_Gate;BioSeqAct_PMCheckState;BioSeqAct_PMExecuteTransition;SeqAct_FinishSequence;SeqEvent_RemoteEvent"
           pergame="true"/>
    
  <!-- Soundplorer specific settings-->
  <setting name="Soundplorer_ReverseIDDisplayEndianness" type="bool" defaultvalue="false" category="Audio"
           friendlyName="Sound Explorer: Reverse ID Display Endianness"/>
  <setting name="Soundplorer_AutoplayEntriesOnSelection" type="bool" defaultvalue="false" category="Audio"
           friendlyName="Sound Explorer: Auto-play Entries on Selection"/>

  <!-- Meshplorer specific settings-->
  <setting name="Meshplorer_BackgroundColor" type="string" defaultvalue="#999999"/>
  <setting name="Meshplorer_ViewFirstPerson" type="bool" defaultvalue="false"/>
  <setting name="Meshplorer_ViewRotating" type="bool" defaultvalue="false"/>
  <setting name="Meshplorer_View_SolidEnabled" type="bool" defaultvalue="true"/>
  <setting name="Meshplorer_ViewWireframeEnabled" type="bool" defaultvalue="false"/>
    
  <!-- Pathfinding Editor specific settings-->
  <setting name="PathfindingEditor_ShowNodeSizes" type="bool" defaultvalue="false"/>
  <setting name="PathfindingEditor_ShowPathfindingNodesLayer" type="bool" defaultvalue="true"/>
  <setting name="PathfindingEditor_ShowActorsLayer" type="bool" defaultvalue="false"/>
  <setting name="PathfindingEditor_ShowArtLayer" type="bool" defaultvalue="false"/>
  <setting name="PathfindingEditor_ShowSplinesLayer" type="bool" defaultvalue="false"/>
  <setting name="PathfindingEditor_ShowEverythingElseLayer" type="bool" defaultvalue="false"/>

  <!-- AssetDB specific settings-->
  <setting name="AssetDB_DefaultGame" type="string" defaultvalue=""/>
  <setting name="AssetDBGame" type="string" defaultvalue="ME3"/>
  <setting name="AssetDBPath" type="string" defaultvalue=""/>

  <!-- Coalesced Editor specific settings -->
  <setting name="CoalescedEditor_SourcePath" type="string" defaultvalue=""/>
  <setting name="CoalescedEditor_DestinationPath" type="string" defaultvalue=""/>

  <!-- Wwise Graph Editor specific settings -->
  <setting name="WwiseGraphEditor_AutoSaveView" type="bool" defaultvalue="false" category="Audio"
           friendlyName="Wwise Graph Editor: Auto-save View"/>
	
  <!-- Export Loader Control settings -->
  <setting name="BinaryInterpreter_SkipAutoParseSizeCheck" type="bool" defaultvalue="false" category="Export Loaders"
           friendlyName="Binary Interpreter: Skip Auto-parse size limit (20KB)"/>
  <setting name="TextureViewer_AutoLoadMip" type="bool" defaultvalue="true" category="Export Loaders"
           friendlyName="Texture Viewer: Auto-load top mip"/>

  <setting name="Interpreter_LimitArrayPropertySize" type="bool" defaultvalue="true" category="Export Loaders"
           friendlyName="Properties: Limit array property size"/>
  <setting name="Interpreter_AdvancedDisplay" type="bool" defaultvalue="true" category="Export Loaders"
           friendlyName="Properties: Display advanced info"/>
  <setting name="Interpreter_Colorize" type="bool" defaultvalue="true" category="Export Loaders"
           friendlyName="Properties: Colorize properties"/>
  <setting name="Interpreter_ShowLinearColorWheel" type="bool" defaultvalue="false" category="Export Loaders"
           friendlyName="Properties: Show LinearColor picker"/>
  
  <setting name="Soundpanel_LoopAudio" type="bool" defaultvalue="false"/>

  <!-- Wwise settings -->
  <setting name="Wwise_3773Path" type="string" defaultvalue="" category="Audio"
           friendlyName="WwiseCLI.exe v3773 Path" fileSelectExtension=".exe"/>
  <setting name="Wwise_7110Path" type="string" defaultvalue="" category="Audio"
           friendlyName="WwiseCLI.exe v7110 Path" fileSelectExtension=".exe"/>
	
  <!-- TFC Compactor -->
  <setting name="TFCCompactor_LastStagingPath" type="string" defaultvalue=""/>

  <!-- Global settings-->
  <setting name="Global_PropertyParsing_ParseUnknownArrayTypeAsObject" type="bool" defaultvalue="false" settingsbridgename="ParseUnknownArrayTypesAsObject"/>
  <setting name="Global_Analytics_Enabled" type="bool" defaultvalue="true" category="General"
           friendlyName="Enable Analytics"/>
  <setting name="Global_ME1Directory" type="string" defaultvalue="" settingsbridgename="ME1Directory" category="General" isDirectorySelect="true"
           friendlyName="Mass Effect 1 Directory"/>
  <setting name="Global_ME2Directory" type="string" defaultvalue="" settingsbridgename="ME2Directory" category="General" isDirectorySelect="true"
           friendlyName="Mass Effect 2 Directory"/>
  <setting name="Global_ME3Directory" type="string" defaultvalue="" settingsbridgename="ME3Directory" category="General" isDirectorySelect="true"
           friendlyName="Mass Effect 3 Directory"/>
  <setting name="Global_LEDirectory" type="string" defaultvalue="" settingsbridgename="LEDirectory" category="General" isDirectorySelect="true"
           friendlyName="Mass Effect Legendary Edition Directory"/>
  <setting name="Global_TLK_Language" type="string" defaultvalue="INT" settingsbridgename="TLKDefaultLanguage" category="General"
           friendlyName="TLK Language"/>
  <setting name="Global_TLK_IsMale" type="bool" defaultvalue="true" settingsbridgename="TLKGenderIsMale" category="General"
           friendlyName="Default to Male TLK"/>

  <setting name="CustomStartupFiles" type="List&lt;string&gt;" defaultvalue="new List&lt;string&gt;()" category="General"
           friendlyName="Custom Startup Files"/>
  <setting name="CustomClassDirectories" type="List&lt;string&gt;" defaultvalue="new List&lt;string&gt;()" category="General"
           friendlyName="Custom Class Directories"/>


</appsettings>
